<div class="page-header">
  <h1>
    Bookingreviews
    <a href="/bookingreviews/new" class="btn btn-lg btn-success">New Bookingreview</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "bookingreviews_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :accuracy, "Accuracy" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :accuracy_gteq, :class => "form-control", :placeholder => "Accuracy greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :accuracy_lteq, :class => "form-control", :placeholder => "Accuracy less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :body_cont, "Body contains" %>
    <%= f.text_field :body_cont, :class => "form-control", :placeholder => "Body contains" %>
  </div>

<div class="form-group">
  <%= f.label :value, "Value" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :value_gteq, :class => "form-control", :placeholder => "Value greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :value_lteq, :class => "form-control", :placeholder => "Value less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :checkin, "Checkin" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :checkin_gteq, :class => "form-control", :placeholder => "Checkin greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :checkin_lteq, :class => "form-control", :placeholder => "Checkin less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :location, "Location" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :location_gteq, :class => "form-control", :placeholder => "Location greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :location_lteq, :class => "form-control", :placeholder => "Location less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :cleanliness, "Cleanliness" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :cleanliness_gteq, :class => "form-control", :placeholder => "Cleanliness greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :cleanliness_lteq, :class => "form-control", :placeholder => "Cleanliness less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :communication, "Communication" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :communication_gteq, :class => "form-control", :placeholder => "Communication greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :communication_lteq, :class => "form-control", :placeholder => "Communication less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :bookings_available_eq, "Booking available " %>
      <label class="radio-inline">
        <%= f.radio_button :bookings_available_eq, "1", checked: ((params[:q] && params[:q][:bookings_available_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :bookings_available_eq, "0", checked: ((params[:q] && params[:q][:bookings_available_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :bookings_available_eq, ""%> Either
      </label>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/bookingreviews" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#bookingreviews_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Bookings</th>
        <th>Accuracy</th>
        <th>Communication</th>
        <th>Cleanliness</th>
        <th>Location</th>
        <th>Checkin</th>
        <th>Value</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>

      <% @bookingreviews.each do |bookingreview| %>
      <tr>
        <td>
          <% if bookingreview.bookings.present? %>
            <a href="/bookings/<%= bookingreview.bookings.id %>">
              <%= bookingreview.bookings.available %>
            </a>
          <% end %>
        </td>
        <td><%= bookingreview.accuracy %></td>
        <td><%= bookingreview.communication %></td>
        <td><%= bookingreview.cleanliness %></td>
        <td><%= bookingreview.location %></td>
        <td><%= bookingreview.checkin %></td>
        <td><%= bookingreview.value %></td>
        <td><%= bookingreview.body %></td>
        <td>
          <a href="/bookingreviews/<%= bookingreview.id %>" class="btn btn-primary">Show</a>
          <a href="/bookingreviews/<%= bookingreview.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bookingreview/<%= bookingreview.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bookingreviews, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
