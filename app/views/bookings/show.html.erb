<div class="page-header">
  <h3>Booking #<%= @booking.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Available</dt>
      <dd><%= @booking.available %></dd>

      <dt>Guests</dt>
      <dd>
        <% if @booking.guests.present? %>
          <a href="/guests/<%= @booking.guests_id %>">
            <%= @booking.guests.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Listings</dt>
      <dd>
        <% if @booking.listings.present? %>
          <a href="/listings/<%= @booking.listings_id %>">
            <%= @booking.listings.title %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/bookings" class="btn btn-primary">
        Back
      </a>
      <a href="/bookings/<%= @booking.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_booking/<%= @booking.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
