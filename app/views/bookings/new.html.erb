<!-- Validation failure messages -->
<% if @booking.errors.any? %>
  <% @booking.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Booking</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_booking" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for available -->
      <div class="checkbox">
        <label for="available">
          <input type="checkbox" id="available" name="available" value="1" <%= "checked" if @booking.available %>>
          Available
        </label>
      </div>

      <!-- Label and input for guests_id -->
      <div class="form-group">
        <label for="guests_id" class="control-label">
          Guests
        </label>

        <input type="text" id="guests_id" name="guests_id" placeholder="Guests" class="form-control" value="<%= @booking.guests_id %>">
      </div>

      <!-- Label and input for listings_id -->
      <div class="form-group">
        <label for="listings_id" class="control-label">
          Listings
        </label>

        <input type="text" id="listings_id" name="listings_id" placeholder="Listings" class="form-control" value="<%= @booking.listings_id %>">
      </div>

      <button class="btn btn-success">
        Create Booking
      </button>
      or
      <a href="/bookings">Cancel</a>
    </form>
  </div>
</div>
