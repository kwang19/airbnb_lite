<!-- Validation failure messages -->
<% if @listing.errors.any? %>
  <% @listing.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Listing</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_listing" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @listing.title %>">
      </div>

      <!-- Label and input for photos -->
      <div class="form-group">
        <label for="photos" class="control-label">
          Photos
        </label>

        <input type="file" id="photos" name="photos" class="form-control">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @listing.description %>">
      </div>

      <!-- Label and input for host_id -->
      <input type="hidden" name="host_id" value="<%= current_user.id %>">

      <!-- Label and input for privateroomorentirehome -->
      <div class="form-group">
        <label for="privateroomorentirehome" class="control-label">
          Privateroomorentirehome
        </label>

        <input type="text" id="privateroomorentirehome" name="privateroomorentirehome" placeholder="Privateroomorentirehome" class="form-control" value="<%= @listing.privateroomorentirehome %>">
      </div>

      <!-- Label and input for number_of_bedrooms -->
      <div class="form-group">
        <label for="number_of_bedrooms" class="control-label">
          Number of bedrooms
        </label>

        <input type="text" id="number_of_bedrooms" name="number_of_bedrooms" placeholder="Number of bedrooms" class="form-control" value="<%= @listing.number_of_bedrooms %>">
      </div>

      <!-- Label and input for number_of_bathrooms -->
      <div class="form-group">
        <label for="number_of_bathrooms" class="control-label">
          Number of bathrooms
        </label>

        <input type="text" id="number_of_bathrooms" name="number_of_bathrooms" placeholder="Number of bathrooms" class="form-control" value="<%= @listing.number_of_bathrooms %>">
      </div>

      <!-- Label and input for guest_id -->
      <div class="form-group">
        <label for="guest_id" class="control-label">
          Guest
        </label>

        <input type="text" id="guest_id" name="guest_id" placeholder="Guest" class="form-control" value="<%= @listing.guest_id %>">
      </div>

      <!-- Label and input for max_occupants -->
      <div class="form-group">
        <label for="max_occupants" class="control-label">
          Max occupants
        </label>

        <input type="text" id="max_occupants" name="max_occupants" placeholder="Max occupants" class="form-control" value="<%= @listing.max_occupants %>">
      </div>

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="control-label">
          City
        </label>

        <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @listing.city %>">
      </div>

      <!-- Label and input for neighborhood -->
      <div class="form-group">
        <label for="neighborhood" class="control-label">
          Neighborhood
        </label>

        <input type="text" id="neighborhood" name="neighborhood" placeholder="Neighborhood" class="form-control" value="<%= @listing.neighborhood %>">
      </div>

      <!-- Label and input for policies -->
      <div class="form-group">
        <label for="policies" class="control-label">
          Policies
        </label>

        <input type="text" id="policies" name="policies" placeholder="Policies" class="form-control" value="<%= @listing.policies %>">
      </div>

      <!-- Label and input for default_price_per_night -->
      <div class="form-group">
        <label for="default_price_per_night" class="control-label">
          Default price per night
        </label>

        <input type="text" id="default_price_per_night" name="default_price_per_night" placeholder="Default price per night" class="form-control" value="<%= @listing.default_price_per_night %>">
      </div>

      <button class="btn btn-success">
        Create Listing
      </button>
      or
      <a href="/listings">Cancel</a>
    </form>
  </div>
</div>
