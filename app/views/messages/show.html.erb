<div class="page-header">
  <h3>Message #<%= @message.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Listings</dt>
      <dd>
        <% if @message.listings.present? %>
          <a href="/listings/<%= @message.listings_id %>">
            <%= @message.listings.title %>
          </a>
        <% end %>
      </dd>

      <dt>Guests</dt>
      <dd>
        <% if @message.guests.present? %>
          <a href="/guests/<%= @message.guests_id %>">
            <%= @message.guests.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Datetime</dt>
      <dd><%= @message.datetime %></dd>

      <dt>Content</dt>
      <dd><%= @message.content %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/messages" class="btn btn-primary">
        Back
      </a>
      <a href="/messages/<%= @message.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_message/<%= @message.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
